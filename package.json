{
    "name": "ArmCord",
    "version": "4.0.0",
    "description": "ArmCord is a custom client designed to enhance your Discord experience while keeping everything lightweight.",
    "main": "ts-out/main.js",
    "scripts": {
        "start": "pnpm run build && node ts-out/src/index.js",
        "startClient": "pnpm run build && node ts-out/src/index.js --start=client",
        "build": "tsc && copyfiles src/**/*.html src/**/**/*.css src/**/**/*.js ts-out/ && copyfiles package.json ts-out/ && copyfiles assets/**/** ts-out/",
        "format": "prettier --write src *.json",
        "prepare": "git config --local core.hooksPath .hooks/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/armcord/armcord.git"
    },
    "author": "smartfrigde",
    "license": "OSL-3.0",
    "bugs": {
        "url": "https://github.com/armcord/armcord/issues"
    },
    "homepage": "https://github.com/armcord/armcord#readme",
    "devDependencies": {
        "@types/node": "^18.11.9",
        "@types/ws": "^8.5.3",
        "copyfiles": "^2.4.1",
        "prettier": "^2.7.1",
        "typescript": "^4.9.3"
    },
    "dependencies": {
        "@gluon-framework/gluon": "github:gluon-framework/gluon#6b2a7fb58e07af6a10a40fa92a8021da97ecdadd",
        "arrpc": "github:OpenAsar/arrpc#32b20feb2c994942a9de72b183ab0f4881c725c3",
        "cross-fetch": "^3.1.5",
        "extract-zip": "^2.0.1",
        "v8-compile-cache": "^2.3.0",
        "ws": "^8.11.0"
    },
    "packageManager": "pnpm@7.13.4",
    "type": "module"
}
